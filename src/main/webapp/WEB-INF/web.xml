<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ServletFirst</servlet-name>
        <servlet-class>com.aries.servlet.ServletFirst</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletFirst</servlet-name>
        <url-pattern>/aries</url-pattern>

    </servlet-mapping>


<!--登录、注册相关-->
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.aries.servlet.user.FormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>FilterUser</filter-name>
        <filter-class>com.aries.servlet.user.LoginFilter</filter-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>I am a user Filter</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FilterUser</filter-name>
        <url-pattern>/register</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>UserInfo</servlet-name>
        <servlet-class>com.aries.servlet.user.UserInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserInfo</servlet-name>
        <url-pattern>/userInfo</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ArgumentErrorHandler</servlet-name>
        <servlet-class>com.aries.servlet.error.ArgumentErrorHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArgumentErrorHandler</servlet-name>
        <url-pattern>/ArgumentErrorHandler</url-pattern>
    </servlet-mapping>



    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
   <error-page>
       <exception-type>com.aries.servlet.error.ArgumentException</exception-type>
       <location>/ArgumentErrorHandler</location>
   </error-page>


    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/TestDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>



</web-app>